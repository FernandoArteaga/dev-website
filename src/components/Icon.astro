---
import { Icon } from "astro-icon/components";

export type IconName = ('github' | 'gitlab' | 'bitbucket' | 'lightbulb-off' | 'lightbulb-on' | 'linkedin' | 'mail' |
  'blog' | 'briefcase' | 'dimonoff' | 'unity' | 'telus')
interface Props {
  name: IconName
  size?: string
  class?: string
}

const { name, size = 32, class: className } = Astro.props;
---

<Icon name={name} width={size} height={size} class:list={['hover:text-primary', className]} />
